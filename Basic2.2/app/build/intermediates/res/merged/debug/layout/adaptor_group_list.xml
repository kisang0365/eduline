<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_adaptor_group_listview_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_layout_header_height"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/element_layout_header_margin"
        android:background="@color/element_layout_header_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/element_layout_header_padding"
        android:visibility="gone" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_adaptor_group_listview_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/element_layout_body_margin"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/element_layout_body_padding" >

        <LinearLayout
            android:layout_width="25dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="@dimen/element_layout_left_margin"
            android:orientation="vertical"
            android:padding="@dimen/element_layout_left_padding" >

            <!-- content start -->

            <LinearLayout
                android:id="@+id/ll_adaptor_group_list_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal|left" >

                <TextView
                    android:id="@+id/tv_adaptor_group_list_left"
                    style="@style/tv_element"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="-" >
                </TextView>
            </LinearLayout>

            <!-- content end -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="@dimen/element_layout_center_margin"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/element_layout_center_padding" >

            <!-- content start -->

            <LinearLayout
                android:id="@+id/ll_adaptor_group_list_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_adaptor_group_list_center"
                    style="@style/tv_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="-" >
                </TextView>

                <TextView
                    android:id="@+id/tv_adaptor_group_list_card"
                    style="@style/tv_content"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/app_button"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="4"
                    android:padding="3dp"
                    android:text="-" />
            </LinearLayout>

            <!-- content end -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="@dimen/element_layout_right_margin"
            android:background="@color/element_layout_right_background"
            android:orientation="vertical"
            android:padding="@dimen/element_layout_right_padding" >

            <!-- content start -->

            <LinearLayout
                android:id="@+id/ll_adaptor_group_list_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal|right" >

                <TextView
                    android:id="@+id/tv_adaptor_group_list_right"
                    style="@style/tv_element"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="-" >
                </TextView>
            </LinearLayout>

            <!-- content end -->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/element_layout_footer_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:background="@color/app_ci_5"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

